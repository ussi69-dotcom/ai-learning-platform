# Database
POSTGRES_USER=ai_user
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_DB=learning_platform
DATABASE_URL=postgresql://ai_user:CHANGE_ME_SECURE_PASSWORD@db:5432/learning_platform

# Redis
REDIS_URL=redis://redis:6379/0

# Backend Security
# ⚠️ CRITICAL: Generate with: openssl rand -hex 32
# The app will REFUSE TO START in production if SECRET_KEY is 'changeme'
SECRET_KEY=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Production Mode (enables strict security checks)
ENVIRONMENT=production

# CORS
BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]
FRONTEND_URL=https://yourdomain.com

# Email (SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
EMAILS_FROM_EMAIL=noreply@yourdomain.com

# Admin User
FIRST_SUPERUSER=admin@yourdomain.com
FIRST_SUPERUSER_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Frontend
NEXT_PUBLIC_API_URL=https://yourdomain.com/api

# n8n (Optional)
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_ME

# News Feed
NEWS_REFRESH_INTERVAL_MINUTES=30
YOUTUBE_API_KEY=YOUR_YOUTUBE_DATA_API_V3_KEY

# Daily Digest (Perplexity Integration)
# Get API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PERPLEXITY_WEBHOOK_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32
DIGEST_WEBHOOK_URL=https://yourdomain.com/api/digest/webhook

# Mentor (Local LLM)
MENTOR_FAST_URL=http://mentor-fast:8081
MENTOR_MODEL_DIR=/home/deploy/models
MENTOR_MAX_TOKENS=320
MENTOR_TIMEOUT_FAST=60
MENTOR_INDEX_CACHE_SIZE=64
MENTOR_CHUNK_CHARS=900
MENTOR_CHUNK_OVERLAP=150

# Context7 MCP (Docs lookup)
# Used by MCP config (e.g. `.mcp.json`) to authenticate to https://mcp.context7.com/mcp
CONTEXT7_API_KEY=ctx7sk-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
